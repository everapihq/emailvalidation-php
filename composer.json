{
    "name": "everapi/emailvalidation-php",
    "description": "A PHP wrapper for the emailvalidation.io API",
    "keywords": [
        "emailvalidation.io",
        "emailvalidation-php",
        "email verification api",
        "email validation api",
        "api",
        "emailvalidation"
    ],
    "homepage": "https://github.com/everapihq/emailvalidation-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Clemens Ehrenreich",
            "email": "office@everapi.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Emailvalidation\\": "src"
        }
    },
    "scripts": {
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
